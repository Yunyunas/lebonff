{% extends "layout.twig" %}

{% block title %} <title>Liste des annonces</title> {% endblock %}
{% block content %}

<div class="container">

    <div class="row">
		<h1 class="my-4 col-md-4">Liste des annonces</h1>
        <a href="index.php?url=addProduct">Accéder au formulaire pour ajouter une annonce</a>
		<div class="col-md-4">
		</div>

		<div class="col-md-4">
			<a class="btn btn-danger" id="btn-ajouter-rubrique" href="index.php?action=formAjouterRubrique" style="visibility:{{ session.utilisateur.admin != 1 ? 'hidden' : 'visible' }}">Ajouter une rubrique</a>
		</div>
	</div>

		<div class="row">
			{% for product in products %}
				<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				
					<div class="card h-100">
						<a href="#"><img class="card-img-top" src="{{product.url_picture}}" alt="Image de {{product.name}}"></a>
						<div class="card-body">
							<h4 class="card-title">
								<a href="#">{{product.name}}</a>
							</h4>
							<p class="card-text">{{product.description}}</p>
							<p class="card-text">{{product.price}} euros</p>
							<p class="card-text">Annonce créée le {{product.created_at}} et par {{product.id_user}} dans la catégorie {{product.id_category.name}}</p>
							<a class="btn btn-primary" href="#" style="visibility:{{ session.role != 'admin' ? 'hidden' : 'visible' }}">Modifier</a>
							<a class="btn btn-danger" href="#" style="visibility:{{ session.role != 'admin' ? 'hidden' : 'visible' }}">Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>

{% endblock %}