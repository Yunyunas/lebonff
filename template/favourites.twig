{% extends "layout.twig" %}

{% block description %} <meta name="description" content="site petites annonces sur l'univers de final fantasy, votre liste coups de coeur"> {% endblock %}
{% block keywords %} <meta name="keywords" content="final fantasy materia arme tifa cloud favoris coups de coeur"> {% endblock %}

{% block title %} <title> Mon compte </title> {% endblock %}

{% block content %}

<div class="container">
  	<div class="row">
 		<h1 class="my-4">Voici votre liste de coups de coeur {{session.firstName}} !</h1>
	</div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="list-group">
            	<h4 class="list-group-item active"> Informations</h4>
                <p class="list-group-item"><b>Nom : </b> {{session.lastName}} </p>
                <p class="list-group-item"><b>Prénom : </b>  {{session.firstName}} </p>
                <p class="list-group-item"><b>Téléphone : </b>  {{session.phone}} </p>
                <p class="list-group-item"><b>Email : </b>  {{session.email}} </p>
                <a class="btn btn-success" id="account" href="index.php?url=account">Accéder à mon compte</a>
                <hr>
		        <a class="btn btn-danger" id="logout" href="index.php?url=logout">Déconnexion</a>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="row text-center">                
                {% for favourite in favourites %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="index.php?url=product&id={{favourite.product.id}}">
                                <img class="card-img-top" src="./public/img/products/{{favourite.product.urlPicture}}" alt="Image de {{favourite.product.name}}">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="index.php?url=product&id={{favourite.product.id}}">{{favourite.product.name}}</a>
                                </h4>
                                <h5> Prix: {{favourite.product.price}} euros</h5>
                                <p class="card-text">{{favourite.product.description}}</p>
                            </div>
                            <div class="card-footer">
                        	    <a class="btn btn-danger" href="index.php?url=deleteFavourite&id={{favourite.id}}"><i class="fa-solid fa-trash"></i> Supprimer des favoris</a>
                    	    </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
	</div>
</div>  

{% endblock %}