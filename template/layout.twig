    <body>
        <header>
            <nav id="menu">
                <div class="nav-menu">
                    <div class="logo">
                        <a href="index.php?url=home"><img src="./public/img/logoff.png" alt="logo"></a>
                        <a href="index.php?url=home"><h2>Le bon FF</h2></a>
                    </div>
                    
                    <ul class="items">
                        <li><a href="index.php?url=home">Accueil</a></li>
                        <li><a href="index.php?url=newProducts&paramName=Nouveautés">Nouveautés</a></li>
                        <li><a href="index.php?url=categories">Catégories</a></li>
                    </ul>
                </div>
                
                <div class="nav-end">
                    <div class="search">
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        <input type="text" placeholder="Rechercher">
                    </div>
                    
                    <div class="profile">
                        <!-- Voir pour si déconnecté => Se connecter (form JS + redirection vers inscription) / Si connecté => Mon compte + photo et menu déroulant déconnexion ? -->
                        <a href={{session.id != '' ? 'index.php?url=account' : 'index.php?url=login'}}>{{session.id != '' ? 'Mon compte' : 'Se connecter'}}</a>
                        <a href="index.php?url=account" style="visibility:{{ session.id != '' ? 'visible' : 'hidden' }}"><img src="./public/img/user2.png" alt="image de profil"></a>
                    </div>
                </div>
                
            </nav>
            
            <div id="nav-cat">
                <ul class="items-cat">
                    {% for category in categories %}
                        <li><a href="index.php?url=products&id={{category.id}}&paramName={{category.name}}">{{category.name}}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </header>
        
        {% block content %}{% endblock %}
        
        <footer id="footer">
            <div class="block">
                <div class="site">
                    <h2>Site</h2>
                    <ul class="block-items">
                        <li><a href="index.php?url=home">Page d'accueil</a></li>
