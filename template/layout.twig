                        <li><a href="index.php?url=home">Mentions légales</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="block">
                <div class="final-fantasy">
                    <h2>Jeux Final Fantasy</h2>
                    <ul class="block-items">
                        <li>Final Fantasy VII</li>
                        <li>Final Fantasy VIII</li>
                        <li>Final Fantasy IX</li>
                        <li>Final Fantasy X</li>
                    </ul>
                </div>
            </div>
            
            <div class="collab">
                <div class="block">
                        <img src="./public/img/merci.png" alt="Image d'un formateur lambda">
                </div>
                
                <div class="block">
                    <img src="./public/img/merci3.png" alt="Image d'une collègue lambda">
                </div>
                
                <div class="block">
