{% extends "adminLayout.twig" %}

{% block title %} <title>Admin</title> {% endblock %}

{% block content %}

	<div class="board">
	    <table>
	        <thead>
	            <tr>
	                <td>Nom</td>
	                <td>Coordonn√©es</td>
	                <td>Role</td>
	                <td>Modifier</td>
	                <td>Supprimer</td>
	            </tr>
	        </thead>
	        <tbody>
	        	{% for user in users %}
	            <tr>
	                <td class="people">
	                    <img src="./public/img/user2.png" alt="profil picture">
	                    <div class="name">
	                        <h5>{{user.first_name}} {{user.last_name}}</h5>
	                        <p>{{user.id}}</p>
	                    </div>
	                </td>
	                
	                <td class="email">
	                    <h5>{{user.email}}</h5>
	                    <p>{{user.phone}}</p>
	                </td>
	                
	                <td class="role">
	                    <p>{{user.role}}</p>
	                </td>
	                <td class="edit"><a href="index.php?url=admin/user/update&id={{user.id}}">Modifier<i class="fa-solid fa-pen"></i></a></td>
	                
	                <td class="delete"><a href="index.php?url=admin/account/delete&id={{user.id}}">Supprimer<i class="fa-solid fa-ban"></i></a></td>
	            </tr>
	          	{% endfor %}
	      	</tbody>
	    </table>
	</div>
</section>


{% endblock %}