{% extends "layout.twig" %}

{% block description %} <meta name="description" content="site petites annonces sur l'univers de final fantasy, créer une annonce"> {% endblock %}
{% block keywords %} <meta name="keywords" content="final fantasy materia arme tifa cloud chimeres ffx ffviii ffix ffvii annonces"> {% endblock %}
{% block title %} <title>Ajouter une annonce</title> {% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Ajouter une annonce</h5>
                    <form class="form-signin" method="post" action="index.php?url=insertProduct" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="">Catégorie</label>
                            <select class="form-control choix-category" name="category" id="category">
                                {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-label-group">
                            <label for="name">Titre</label>
                            <input type="text" id="inputEnTete" name="name" class="form-control" placeholder="Titre de l'annonce" required autofocus>
                        </div>
                        
                        <div class="form-label-group">
                            <label for="description">Description</label>
                            <textarea type="text" id="description" name="description" class="form-control" placeholder="Description" required></textarea>
                        </div>
                        
                        <div class="form-label-group">
                            <label for="price">Prix</label>
                            <input type="number" id="price" name="price" class="form-control" placeholder="Prix" required>
                        </div>
                        
                        <div class="form-label-group">
                            <label for="image">Image (extensions png, jpg ou jpeg)</label>
                            <input type="file" id="image" name="image" class="form-control" placeholder="Image souhaitée" required>
                        </div>
                        
                        <div class="text-center text-danger">
                            <p>{{message}}</p>
                        </div>
                        
                        <hr class="my-4">
                        <div class="text-center">
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Valider</button>
                            <input type="hidden" name="csrf_token" value="{{csrf}}">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}	